<div class="row">
  <div class="col-sm-8 col-sm-offset-2 mx-auto">
    <article>
      <h2><%= @article.title %></h2>
      <p><%= @article.content %></p>
    </article>
    <div class="d-flex">
      <%= link_to edit_article_path do %>
        <div class="icon-sm">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
          </svg>
        </div>
      <% end %>
      <%= link_to article_path(@article), method: :delete, data: {confirm: 'Are you sure you want to delete?'} do %>
        <div class="icon-sm ms-2">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
          </svg>
        </div>
      <% end %>
      <div class="ms-auto d-flex">
        <div class="icon-sm">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M4 6h16M4 10h16M4 14h16M4 18h16" />
          </svg>
        </div>
        <%= link_to 'Back to all', articles_path, class: 'ms-2' %>
      </div>
    </div>
    <hr>
      <p><%= @article.body %></p>
  </div>
</div>
